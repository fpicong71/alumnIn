@model WebFormacion.Models.Contacto

@{
    ViewData["Title"] = "Eliminar Contacto";
}

<h2 class="tit text-center mt-md5 mt-2 mb-5">Eliminar Contacto</h2>

<h3 class="box-alert box70 mb-3 text-center">¿Estás seguro de querer eliminar este Contacto?</h3>

<div class="d-flex flex-row justify-content-end mt-5">
    <a asp-action="Index" class="btnVolver d-flex flex-row justify-content-center flex-wrap">
        <img src="~/img/volver_listado.png" alt="Volver al Listado" class="iconoVolver text-center" />
        <span class="align-self-center text-center">Volver al Listado</span>
    </a>
</div>


<div class="mt-3">
    <h3 class="tit mt-3 tableHead p-2">
        @Html.DisplayFor(model => model.Nombre)
        @Html.DisplayFor(model => model.Apellido1)
        @Html.DisplayFor(model => model.Apellido2)
    </h3>


    <div class="row box-lighter mt-0 p-3">
        <table>
            <tr>
                <th class="negrita pr-5">@Html.DisplayNameFor(model => model.ContactoID) </th>
                <td class="pl-5"> @Html.DisplayFor(model => model.ContactoID)</td>
            </tr>
            <tr>
                <th class="negrita pr-5">@Html.DisplayNameFor(model => model.Nombre) </th>
                <td class="pl-5"> @Html.DisplayFor(model => model.Nombre)</td>
            </tr>
            <tr>
                <th class="negrita pr-5"> @Html.DisplayNameFor(model => model.Apellido1) </th>
                <td class="pl-5"> @Html.DisplayFor(model => model.Apellido1)</td>
            </tr>
            <tr>
                <th class="negrita pr-5">  @Html.DisplayNameFor(model => model.Apellido2) </th>
                <td class="pl-5"> @Html.DisplayFor(model => model.Apellido2)</td>
            </tr>
            <tr>
                <th class="negrita pr-5">  @Html.DisplayNameFor(model => model.Puesto) </th>
                <td class="pl-5"> @Html.DisplayFor(model => model.Puesto)</td>
            </tr>
        </table>
    </div>

    <form asp-action="Delete" class=" mb-5">
        <input type="hidden" asp-for="ContactoID" />
        <input type="submit" value="Eliminar" class="btn boton" /> @*|
            <a asp-action="Index">Volver al Listado</a>*@
    </form>


</div>
