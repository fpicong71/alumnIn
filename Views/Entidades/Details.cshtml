            </tr>
            <tr>
                <th class="negrita pr-5">  @Html.DisplayNameFor(model => model.CodigoPostal) </th>
                <td class="pl-5"> @Html.DisplayFor(model => model.CodigoPostal)</td>
            </tr>
        </table>
    </div>

    @if (Model.CursoEntidades!= null)
    {
        <div class=" row mt-5 mb-5">
            <table class="table">
                <thead class="tableHead">
                    <tr>
                        <td colspan="2" class="pt-0 pb-0">
                            <h4 class="negrita">  Cursos@*@Html.DisplayNameFor(model => model.CursoEntidades)*@ </h4>
                        </td>
                    </tr>
                </thead>
                <tr class="box ">
                    <th class="epigrafeTabla tdNarrow">Código Curso</th>
                    <th class="epigrafeTabla tdNarrow">Nombre Curso</th>
                </tr>
                <tbody class="box-lighter">
                    @foreach (var item in Model.CursoEntidades)
                    {
                        <tr>
                            <td class="tdNarrow">
                                @Html.DisplayFor(modelItem => item.CursoID)
                            </td>
                            <td class="tdNarrow">
                                @Html.DisplayFor(modelItem => item.Curso.NombreCurso)
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    }



