    ViewData["Title"] = "Ver Entidad de Formación";
}

<h2 class="tit text-center">Detalles Entidad de Formación</h2>

<div class="d-flex flex-row justify-content-end mt-5">
    <a asp-action="Index" class="btnVolver d-flex flex-row justify-content-center flex-wrap">
        <img src="~/img/volver_listado.png" alt="Volver al Listado" class="iconoVolver text-center" />
        <span class="align-self-center text-center">Volver al Listado</span>
    </a>
</div>

<div class="mt-3">
    <h3 class="tit mt-3 tableHead p-2"> @Html.DisplayFor(model => model.RazonSocial) </h3>


    <div class="row box-lighter mt-0 p-3">
        <table>
            <tr>
                <th class="negrita pr-5">@Html.DisplayNameFor(model => model.EntidadID) </th>
                <td class="pl-5"> @Html.DisplayFor(model => model.EntidadID)</td>
            </tr>
            <tr>
                <th class="negrita pr-5">@Html.DisplayNameFor(model => model.RazonSocial) </th>
